{
  "compilerOptions": {
    "lib": [
      "es2024",
      "dom"
    ],
    "target": "es2024",
    "module": "commonjs",

    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.setup.ts",
    "**/*.config.js",
    "dist"
  ]
}
