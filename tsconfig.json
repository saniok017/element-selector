{
  "compilerOptions": {
    "lib": [
      "es2024",
      "dom"
    ],
    "module": "ESNext",
    "target": "es2024",

    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 